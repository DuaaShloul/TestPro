@model IEnumerable<QRMenu.Models.Category>
@{
    Layout = null;
}

@{

    List<int> myList = ViewBag.CategoryList;

}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Restaurant Menu</title>
    <style>
        /* Stylish restaurant menu design */
        body {
            font-family: Arial, sans-serif;
            margin: 0;
            padding: 0;
            background-color: #f0f0f0;
        }

        .menu {
            max-width: 800px;
            margin: 0 auto;
            padding: 20px;
            background-color: #fff;
            box-shadow: 0px 2px 5px rgba(0, 0, 0, 0.2);
            border-radius: 10px;
        }

        h2 {
            text-align: center;
            color: #fd7914;
        }

        .category {
            margin-top: 20px;
            color: #008080;
        }

        .item {
            display: flex;
            align-items: center;
            border: 1px solid #ddd;
            margin-bottom: 10px;
            padding: 15px;
            background-color: #fff;
            border-radius: 10px;
            transition: transform 0.2s ease;
        }

            .item:hover {
                transform: scale(1.02);
            }

            .item img {
                max-width: 100px;
                max-height: 100px;
                border-radius: 10px;
                margin-right: 20px;
                box-shadow: 0px 2px 5px rgba(0, 0, 0, 0.2);
            }

        .item-info {
            flex-grow: 1;
        }

        .item-description {
            color: #555;
            margin-bottom: 5px;
        }

        .item-price {
            font-weight: bold;
            color: #ff6600;
        }

        .quantity {
            display: flex;
            align-items: center;
            margin-top: 5px;
        }

            .quantity input {
                width: 40px;
                padding: 5px;
                border: 1px solid #ddd;
                border-radius: 5px;
                text-align: center;
                font-weight: bold;
            }

        .add-to-cart {
            background-color: #ff6600;
            color: #fff;
            border: none;
            cursor: pointer;
            padding: 8px 15px;
            border-radius: 5px;
            font-weight: bold;
            transition: background-color 0.3s ease;
        }

            .add-to-cart:hover {
                background-color: #e55400;
            }

        .header {
            display: flex;
            align-items: center; /* Center items vertically in the header */
        }

        .logo {
            max-width: 50px; /* Adjust the size of the logo as needed */
            margin-right: 10px; /* Add some spacing between the logo and text */
        }

        h1 {
            color: #fd7914;
            margin: 0; /* Remove default margin to eliminate space around the heading */
        }
        /* Cart icon */
        .cart-icon {
            position: relative;
            float: right; /* Float the icon to the right within the menu div */
            margin-top: -30px; /* Adjust the top margin to position it properly */
            display: flex;
            align-items: center;
            cursor: pointer;
            background-color: white;
            color: #fff;
            border-radius: 50%;
            padding: 8px;
            box-shadow: 0px 2px 5px rgba(0, 0, 0, .2);
        }

            .cart-icon img {
                max-width: 30px; /* Adjust the size of the cart icon image as needed */
                margin-right: 0px; /* Add spacing between the icon and count */
            }

        .cart-count {
            font-weight: bold;
            font-size: 16px;
        }
    </style>
</head>
<body>
    <div class="menu">

        <div class="header">
           
            <img class="logo" src="@ViewBag.Logo" alt="Restaurant Logo">
            <h1 style="font-size : 15pt ">Restaurant Menu</h1>
        </div>
        <div class="cart-icon">
            <a asp-action="Cart" asp-controller="Menus">
            <img src="~/NataHTML/images/cart-icon.png" alt="Shopping Cart">
                </a>
            @*<span class="cart-count">0</span>*@
        </div>
        <!-- Category: Appetizers -->
        @foreach (var item in Model)
        {

            @foreach (var item2 in myList)
            {
                if (item.CategoryId == item2)
                {
                    <div class="category">
                        <label asp-for="@item.CategoryId" name="CategoryId" hidden></label>
                        <h3>     @item.NameAR | @item.NameEN</h3>
                        @await Component.InvokeAsync("Menu", new { id = item.CategoryId, someCondition = true })



                    </div>
                }
            }}
    </div>
</body>
</html>




