@model Contact
@{
    ViewData["Title"] = "DeleteMsg";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section class="contact-section section-padding" id="section_4">

    <div class="row">

        <div class="col-lg-5 col-12 mx-auto">
            <form class="custom-form download-form bg-white shadow" method="post" action="DeleteMsg">

                <input asp-for="@Model.ContactId" name="idd" hidden />
                <div class="form-group">
                    <p style="color:red">Are you sure you want to delete this Msg?</p>
                </div>
                <button type="submit" value="DeleteMsg" class="btn btn-danger">Delete</button>
                <a asp-action="Messages"  class="btn btn-secondary">Cancel</a>
            </form>


        </div>
    </div>
</section>

