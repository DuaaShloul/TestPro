@model IdentityUser
@{
    ViewData["Title"] = "DeleteUser";
}

<section class="contact-section section-padding" id="section_4">

    <div class="row">

        <div class="col-lg-5 col-12 mx-auto">
            <form class="custom-form download-form bg-white shadow" method="post" action="DeleteUser">

                <input asp-for="@Model.Id" name="idd" hidden />
                <div class="form-group">
                    <p style="color:red">Are you sure you want to delete this user?</p>
                </div>
                <button type="submit" value="DeleteUser" class="btn btn-danger">Delete</button>
                <a asp-action="AllUsers" class="btn btn-secondary">Cancel</a>
            </form>


        </div>
    </div>
</section>