@model QRMenu.Models.ViewModels.CreateRoleViewModel

@{
    ViewData["Title"] = "CreateRole";
}

<section class="contact-section section-padding" id="section_4">

    <div class="row">

        <div class="col-lg-5 col-12 mx-auto">
            <form class="custom-form download-form bg-white shadow"  asp-action="CreateRole" asp-controller="Account" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="RoleName" class="control-label"></label>
                    <input asp-for="RoleName" class="form-control" />
                    <span asp-validation-for="RoleName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Create" class="btn btn-primary" />
                    <a asp-action="AllRoles" asp-controller="Account" class="btn btn-warning">Cancel</a>
                </div>
            </form>
        </div>
    </div>

    <div>

    </div>
   
</section>
    @section Scripts {
        @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    }
