@model QRMenu.Models.ViewModels.EditRoleViewModel

@{
    ViewData["Title"] = "EditRole";
}

<section class="contact-section section-padding" id="section_4">

    <div class="row">

        <div class="col-lg-5 col-12 mx-auto">
            <form class="custom-form download-form bg-white shadow" asp-action="EditRole" asp-controller="Account" method="post">
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Id" class="control-label"></label>
                    <input asp-for="Id" class="form-control" disabled />
                    @*<span asp-validation-for="Id" class="text-danger"></span>*@
                </div>
                <div class="form-group">
                    <label asp-for="RoleName" class="control-label"></label>
                    <input asp-for="RoleName" class="form-control" />
                    <span asp-validation-for="RoleName" class="text-danger"></span>
                </div>
                <br />
                <div class="form-group">
                    <input type="submit" value="Update" class="btn btn-primary" style="background-color: #008081; color: black; border: none " />
                    <a class="btn btn-danger" asp-action="AllRoles">Cancel</a>
                </div>
                 <br />

                <div class="card">
                    <div class="card-header">
                        Current Users In this Role
                    </div>
                    <div class="card-body">
                        @if (Model.Users.Any())
                        {
                            foreach (var user in Model.Users)
                            {
                                <h4 class="card-title">@user</h4>
                            }
                        }
                        else
                        {
                            <h4 class="card-title">No Users In this Role </h4>

                        }
                    </div>
                    <div class="card-footer"><a class="btn btn-primary" style="background-color: #008081; color: black; border: none " asp-action="AddRemoveUserRole" asp-controller="Account" asp-route-id="@Model.Id"> Add Or Remove Users from this Role </a></div>
                </div>
            </form>
        </div>
    </div>
     </section>

    @section Scripts {
        @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    }
