@model IEnumerable<QRMenu.Models.Category>
@{
    //ViewData["Title"] = "OurRestaurant";
    Layout = null;

}
@{

    List<int> myList = ViewBag.CategoryList;

}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="icon" type="image/x-icon"  href="@ViewBag.Logo">

    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Nunito:wght@300;400;800&display=swap" rel="stylesheet">

    <link type="text/css" rel="stylesheet" href="~/ShadyMenu/assets/css/style.css" />

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>


    <title>The Menu</title>
</head>
<body class="menu-body">

    <div class="menu-header">
        <img src="@ViewBag.Logo" class="menu-logo">
        <h1>Taste It -- Feel It</h1>
    </div>

    <div class="menu-container">
        @foreach (var item in Model)
        {

            @foreach (var item2 in myList)
            {
                if (item.CategoryId == item2)
                {

                    <label asp-for="@item.CategoryId" name="CategoryId" hidden></label>
                    <div class="menu-category">
                        <h1>
                            @item.NameEN | @item.NameAR
                        </h1>
                    </div>

                    <div class="row">


                        @await Component.InvokeAsync("Shady", new { id = item.CategoryId, someCondition = true })


                    </div>

                }
            }


        }
        <!-- Category -->
        <!-- End-Category -->
       

       

        <div class="row">


            <div class="quantity">
                <div class="qtyContainer">
                    <span class="qtySpan" >Check Your Cart </span>
                
                </div>
                <span class="addItem"><a class="icon-shopping-cart" asp-action="ShadyCart" asp-controller="Menus" style="color:wheat"> check cart </a></span>
            </div>

        </div>

        



    </div>



</body>
</html>
