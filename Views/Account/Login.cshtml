@model QRMenu.Models.ViewModels.LoginViewModel

@{
    ViewData["Title"] = "Login";
}

 
<section class="contact-section section-padding" id="section_4">
  
        <div class="row">

            <div class="col-lg-5 col-12 mx-auto">
                <form class="custom-form download-form bg-white shadow" asp-action="Login" asp-controller="Account" method="post">
                    <div asp-validation-summary="All" class="text-danger"></div>
                    <div class="input-group mb-4">
                       @* <label asp-for="UserName" class="control-label"></label>*@
                        <input asp-for="UserName" class="form-control" placeholder="name@domain.com" aria-label="form-email" aria-describedby="basic-addon2"  />
                       <br />
                        @*<span asp-validation-for="UserName" class="text-danger"></span>*@
                    </div>
                    <div class="input-group mb-4">
                       @* <label asp-for="Password" class="control-label"></label>*@
                        <input asp-for="Password" class="form-control" placeholder="Enter Password" aria-label="form-password " aria-describedby="basic-addon2" />
                        @*<span asp-validation-for="Password" class="text-danger"></span>*@
                    </div>
                    <div class="col-lg-8 col-md-10 col-8 mx-auto">
                        <input class="form-control" style="background-color: #fd7914;   color: #141457" type="submit" value="Login"   />
                    </div>
                </form>
            </div>
        </div>

        <div>
            </div>
        </section>
           @* <a asp-action="Index">Back to List</a>*@
        

        @section Scripts {
            @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
        }
